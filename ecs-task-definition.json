{
  "family": "my-gi-nextjs-app-task",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "my-gi-nextjs-app-container",
      "image": "128115030554.dkr.ecr.ap-southeast-1.amazonaws.com/my_gi_nextjs_app_repo:$(cat /app/package.json | jq -r '.version')",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "memory": 512,
      "cpu": 256,
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/fargate-task-definition",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "ESKIN_MOTOR_PDS",
          "value": "{{resolve:ssm:parameter/container_app/eskin_motor/PDS}}"
        }
      ],
      "environmentFiles": [
        {
          "type": "s3",
          "value": "arn:aws:s3:::my-gi-ecs-poc-bucket/environment-variables/env-vars.env"
        }
      ],
      "secrets": [
        {
            "name": "ESKIN_MOTOR_POLICY_WORDING",
            "valueFrom": "arn:aws:ssm:ap-southeast-1:128115030554:parameter/container_app/eskin_motor/policy_wording"
        }
      ]
    }
  ],
  "executionRoleArn": "arn:aws:iam::128115030554:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::128115030554:role/mygiECSTaskRole",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512"
}
